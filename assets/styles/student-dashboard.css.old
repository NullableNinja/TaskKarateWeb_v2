  align-items: stretch;
}

@media (max-width: 900px) {
  .messages-panel {
    grid-template-columns: minmax(0, 1fr);
  }
}

/* LEFT COLUMN: BUDDY LIST */

.buddy-list {
  background: var(--panel-bg, rgba(15, 23, 42, 0.96));
  border-radius: 1rem;
  padding: 1rem;
  box-shadow: var(--panel-shadow, 0 18px 40px rgba(15, 23, 42, 0.9));
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.buddy-list-scroll {
  margin-top: 0.5rem;
  display: flex;
  flex-direction: column;
  gap: 0.4rem;
  max-height: 320px;
  overflow-y: auto;
  padding-right: 0.25rem;
}

.buddy-row {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.5rem 0.75rem;
  border-radius: 0.85rem;
  border: 1px solid rgba(148, 163, 184, 0.15);
  background: radial-gradient(circle at 0% 0%, rgba(148, 163, 184, 0.16), transparent),
              rgba(15, 23, 42, 0.9);
  cursor: pointer;
  transition:
    background 0.15s ease,
    transform 0.1s ease,
    box-shadow 0.1s ease,
    border-color 0.15s ease;
  text-align: left;
  position: relative;
}

.buddy-row:hover {
  transform: translateY(-1px);
  border-color: rgba(148, 163, 184, 0.4);
  box-shadow: 0 10px 24px rgba(15, 23, 42, 0.9);
}

.buddy-row.is-active {
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.18), rgba(59, 130, 246, 0.18));
  border-color: rgba(94, 234, 212, 0.7);
  transform: translateY(-1px);
}

.buddy-avatar {
  width: 40px;
  height: 40px;
  border-radius: 999px;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 0.85rem;
  letter-spacing: 0.04em;
  color: #e5e7eb;
  background-color: var(--avatar-bg, #1f2937);
  box-shadow:
    0 0 0 2px rgba(15, 23, 42, 0.9),
    0 14px 26px rgba(15, 23, 42, 0.9);
}

.buddy-main {
  flex: 1;
  min-width: 0;
}

.buddy-name {
  font-size: 0.95rem;
  font-weight: 600;
  color: #e5e7eb;
}

.buddy-meta {
  font-size: 0.75rem;
  color: var(--text-muted);
}

.buddy-preview {
  font-size: 0.75rem;
  color: var(--text-muted);
  margin-top: 0.2rem;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/* Unread message badge */
.buddy-unread {
  position: absolute;
  top: 0.25rem;
  right: 0.25rem;
  background: #ef4444;
  color: white;
  font-size: 0.7rem;
  font-weight: 700;
  padding: 0.15rem 0.4rem;
  border-radius: 999px;
  min-width: 1.2rem;
  text-align: center;
  box-shadow: 0 0 8px rgba(239, 68, 68, 0.6);
}

/* RIGHT COLUMN: THREAD AREA */

.thread-area {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.thread-area-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.thread-area-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 0.75rem;
}

.thread-shell {
  background: var(--panel-bg, rgba(15, 23, 42, 0.96));
  border-radius: 1rem;
  padding: 0.9rem;
  box-shadow: var(--panel-shadow, 0 18px 40px rgba(15, 23, 42, 0.9));
  display: flex;
  flex-direction: column;
  min-height: 260px;
}

.thread-header {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding-bottom: 0.75rem;
  margin-bottom: 0.75rem;
  border-bottom: 1px solid rgba(148, 163, 184, 0.4);
}

.thread-title {
  font-weight: 600;
  font-size: 1rem;
  color: #e5e7eb;
}

.thread-subtitle {
  font-size: 0.8rem;
  color: var(--text-muted);
}

/* MESSAGE LIST */

.thread-body {
  flex: 1;
  min-height: 140px;
  max-height: 320px;
  overflow-y: auto;
  padding-right: 0.25rem;
  display: flex;
  flex-direction: column;
  gap: 0.45rem;
}

.chat-message {
  max-width: 78%;
  padding: 0.45rem 0.7rem;
  border-radius: 0.85rem;
  background: rgba(15, 23, 42, 0.9);
  border: 1px solid rgba(148, 163, 184, 0.5);
  font-size: 0.85rem;
  color: #e5e7eb;
  box-shadow: 0 6px 14px rgba(15, 23, 42, 0.8);
}

.chat-message--me {
  margin-left: auto;
  background: linear-gradient(135deg, #22c55e, #16a34a);
  border-color: transparent;
  color: #022c22;
}

.chat-from {
  font-weight: 600;
  font-size: 0.75rem;
  margin-bottom: 0.1rem;
  opacity: 0.85;
}

.chat-text {
  word-wrap: break-word;
}

.chat-time {
  font-size: 0.7rem;
  margin-top: 0.15rem;
  opacity: 0.75;
}

/* EMPTY STATE */

.thread-empty {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.9rem;
  color: var(--text-muted);
  text-align: center;
  padding: 1.5rem 1rem;
}

/* INPUT ROW */

.thread-input {
  display: flex;
  gap: 0.5rem;
  margin-top: 0.75rem;
}

.thread-input .form-input {
  flex: 1;
}

/* ==========================================================
   [12] ACHIEVEMENTS TAB â€” OVERHAUL WITH CUSTOM SVG
   ========================================================== */

.dashboard-root .badges-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 12px;
}

.dashboard-root .badge-card {
  background: rgba(15, 23, 42, 0.9);
  border-radius: var(--radius);
  border: 1px solid rgba(148, 163, 184, 0.35);
  padding: 12px 14px;
  text-align: center;
  position: relative;
  overflow: hidden;
  transition: transform 0.15s ease, box-shadow 0.15s ease;
  cursor: pointer;
}

.dashboard-root .badge-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 24px rgba(15, 23, 42, 0.8);
}

/* Badge level styling */
.badge-level--bronze {
  border-color: rgba(205, 127, 50, 0.6);
  background: linear-gradient(135deg, rgba(205, 127, 50, 0.1), rgba(15, 23, 42, 0.9));
}

.badge-level--silver {
  border-color: rgba(192, 192, 192, 0.6);
  background: linear-gradient(135deg, rgba(192, 192, 192, 0.1), rgba(15, 23, 42, 0.9));
}

.badge-level--gold {
  border-color: rgba(255, 215, 0, 0.6);
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.15), rgba(15, 23, 42, 0.9));
}

.badge-level--platinum {
  border-color: rgba(229, 228, 226, 0.8);
  background: linear-gradient(135deg, rgba(229, 228, 226, 0.2), rgba(15, 23, 42, 0.9));
}

.dashboard-root .badge-icon {
  width: 60px;
  height: 60px;
  margin: 0 auto 8px;
}

.dashboard-root .badge-title {
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 4px;
}

.dashboard-root .badge-category {
  font-size: 0.85rem;
  color: var(--text-muted);
  margin-bottom: 4px;
}

.dashboard-root .badge-progress {
  font-size: 0.8rem;
  color: var(--tk-blue);
}

/* Gold Star Wall */
.dashboard-root .goldstar-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 12px;
}

.dashboard-root .goldstar-card {
  background: rgba(15, 23, 42, 0.9);
  border-radius: var(--radius);
  border: 1px solid rgba(250, 204, 21, 0.5);
  padding: 12px 14px;
  position: relative;
  overflow: hidden;
  transition: transform 0.15s ease, box-shadow 0.15s ease;
  cursor: pointer;
}

.dashboard-root .goldstar-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 24px rgba(15, 23, 42, 0.8);
  border-color: rgba(250, 204, 21, 0.8);
}

.dashboard-root .goldstar-icon {
  width: 40px;
  height: 40px;
  margin: 0 auto 8px;
}

.dashboard-root .goldstar-title {
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 4px;
  color: #facc15;
}

.dashboard-root .goldstar-meta {
  font-size: 0.85rem;
  color: var(--text-muted);
}

/* ==========================================================
   [13] NEWS TAB â€” MODAL POPUP SYSTEM
   ========================================================== */

.dashboard-root .news-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 12px;
}

.dashboard-root .news-card {
  background: rgba(15, 23, 42, 0.9);
  border-radius: var(--radius);
  border: 1px solid var(--panel-border);
  padding: 12px 14px;
  cursor: pointer;
  transition: transform 0.15s ease, box-shadow 0.15s ease;
  position: relative;
}

.dashboard-root .news-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 24px rgba(15, 23, 42, 0.8);
}

.dashboard-root .news-title {
  margin: 0 0 4px;
  font-size: 1.05rem;
}

.dashboard-root .news-date {
  font-size: 0.8rem;
  color: var(--text-muted);
  margin-bottom: 4px;
}

.dashboard-root .news-tag {
  display: inline-block;
  padding: 2px 6px;
  border-radius: 999px;
  font-size: 0.7rem;
  background: var(--tk-blue-soft);
  color: var(--tk-blue);
  text-transform: uppercase;
  letter-spacing: 0.04em;
  margin-bottom: 6px;
}

.dashboard-root .news-summary {
  font-size: 0.85rem;
  color: var(--text-main);
  line-height: 1.4;
}

/* News Modal */
.news-modal-backdrop {
  position: fixed;
  inset: 0;
  background: rgba(15, 23, 42, 0.85);
  backdrop-filter: blur(8px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.2s ease;
}

.news-modal-backdrop.is-open {
  opacity: 1;
  pointer-events: auto;
}

.news-modal {
  background: var(--panel-bg);
  border-radius: var(--radius-lg);
  border: 1px solid var(--panel-border);
  padding: 24px;
  max-width: 600px;
  width: 90%;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 24px 48px rgba(0, 0, 0, 0.7);
  transform: scale(0.95);
  transition: transform 0.2s ease;
}

.news-modal-backdrop.is-open .news-modal {
  transform: scale(1);
}

.news-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16px;
  padding-bottom: 12px;
  border-bottom: 1px solid var(--panel-border);
}

.news-modal-title {
  font-size: 1.3rem;
  margin: 0;
  color: #e5e7eb;
}

.news-modal-close {
  background: none;
  border: none;
  color: var(--text-muted);
  font-size: 1.5rem;
  cursor: pointer;
  padding: 4px;
  border-radius: 4px;
  transition: color 0.15s ease, background 0.15s ease;
}

.news-modal-close:hover {
  color: #ef4444;
  background: rgba(239, 68, 68, 0.1);
}

.news-modal-content {
  font-size: 0.95rem;
  line-height: 1.6;
  color: var(--text-main);
}

.news-modal-meta {
  display: flex;
  gap: 16px;
  margin-top: 16px;
  padding-top: 12px;
  border-top: 1px solid var(--panel-border);
  font-size: 0.85rem;
  color: var(--text-muted);
}

/* ==========================================================
   [14] BIRTHDAY CELEBRATION & CONFETTI FX
   ========================================================== */

.birthday-callout {
  background: linear-gradient(135deg, rgba(250, 204, 21, 0.2), rgba(251, 191, 36, 0.1));
  border: 1px solid rgba(250, 204, 21, 0.6);
  border-radius: 12px;
  padding: 12px 16px;
  margin-bottom: 16px;
  text-align: center;
  color: #facc15;
  font-size: 1rem;
  font-weight: 600;
  animation: birthday-glow 2s ease-in-out infinite alternate;
}

@keyframes birthday-glow {
  from {
    box-shadow: 0 0 12px rgba(250, 204, 21, 0.4);
  }
  to {
    box-shadow: 0 0 20px rgba(250, 204, 21, 0.8);
  }
}

.confetti-piece {
  position: fixed;
  top: -10px;
  width: 6px;
  height: 14px;
  border-radius: 2px;
  animation: confetti-fall 3.2s linear forwards;
  z-index: 9999;
}

@keyframes confetti-fall {
  0% {
    transform: translate3d(0, 0, 0) rotateZ(0deg);
    opacity: 1;
  }
  100% {
    transform: translate3d(0, 110vh, 0) rotateZ(360deg);
    opacity: 0;
  }
}

/* Birthday Callout Styles */
.birthday-callout {
  background: linear-gradient(135deg, rgba(245, 158, 11, 0.2), rgba(234, 179, 8, 0.1));
  border: 2px solid rgba(245, 158, 11, 0.4);
  border-radius: 16px;
  padding: 16px 20px;
  margin-bottom: 24px;
  text-align: center;
  font-size: 1.1rem;
  font-weight: 600;
  color: #fbbf24;
  box-shadow: 0 8px 24px rgba(245, 158, 11, 0.3);
  animation: birthday-pulse 2s ease-in-out infinite;
}

@keyframes birthday-pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 8px 24px rgba(245, 158, 11, 0.3);
  }
  50% {
    transform: scale(1.02);
    box-shadow: 0 12px 32px rgba(245, 158, 11, 0.4);
  }
}

/* ==========================================================
   [15] LOGIN PAGE â€” STUDENT TILES + PIN MODAL
   (Kept here for reuse; main behavior driven by student-login.css
    if you decide to fully split later, you can move this block.)
   ========================================================== */

/* Tile container (used on student-login.html when body has .student-login-page) */
.student-login-page #studentResults {
  display: flex;
  flex-wrap: wrap;
  gap: 18px;
  padding: 20px 0;
}

/* Individual tile */
.student-login-page .login-tile {
  background: rgba(15, 23, 42, 0.88);
  border-radius: 18px;
  padding: 16px 18px;
  min-width: 170px;

  border: 1px solid rgba(148, 163, 184, 0.45);
  box-shadow: 0 8px 18px rgba(0, 0, 0, 0.55);
  backdrop-filter: blur(12px);

  cursor: pointer;
  transition:
    transform 0.16s ease,
    box-shadow 0.16s ease,
    border-color 0.16s ease,
    background 0.16s ease;
  text-align: left;
}

/* Hover + selected states */
.student-login-page .login-tile:hover {
  transform: translateY(-4px);
  border-color: #38bdf8;
  box-shadow: 0 14px 30px rgba(56, 189, 248, 0.35);
}

.student-login-page .login-tile.is-selected {
  transform: translateY(-4px);
  border-color: #22c55e;
  box-shadow: 0 18px 36px rgba(34, 197, 94, 0.4);
  background: radial-gradient(
    circle at top left,
    rgba(34, 197, 94, 0.22),
    rgba(15, 23, 42, 0.95)
