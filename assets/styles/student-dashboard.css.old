  height: 48px;
  border-radius: 14px;
  margin-bottom: 10px;

  display: flex;
  align-items: center;
  justify-content: center;

  font-family: "Bebas Neue", system-ui;
  font-size: 1.6rem;

  background: radial-gradient(circle at 30% 20%, #38bdf8, #0ea5e9);
  color: #0f172a;
  border: 2px solid rgba(15, 23, 42, 0.9);
  box-shadow: 0 6px 14px rgba(15, 23, 42, 0.8);
}

/* Staff highlight */
.student-login-page .login-tile__avatar--staff {
  background: radial-gradient(circle at 30% 20%, #facc15, #eab308);
}

/* Meta text */
.student-login-page .login-tile__meta strong {
  display: block;
  font-size: 1rem;
  margin-bottom: 2px;
}

.student-login-page .login-tile__meta p {
  margin: 0;
}

.student-login-page .login-tile__role {
  margin-top: 2px;
  color: #f97316;
}

/* PIN MODAL BACKDROP */
.student-login-page .pin-modal-backdrop {
  position: fixed;
  inset: 0;
  background: rgba(15, 23, 42, 0.85);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;

  opacity: 0;
  pointer-events: none;
  transition: opacity 0.18s ease;
  z-index: 40;
}

/* When open */
.student-login-page .pin-modal-backdrop.is-open {
  opacity: 1;
  pointer-events: auto;
}

.pin-modal-open {
  overflow: hidden;
}

/* PIN MODAL CARD */
.student-login-page .pin-modal {
  width: 100%;
  max-width: 420px;
  background: rgba(15, 23, 42, 0.98);
  border-radius: 20px;
  border: 1px solid rgba(148, 163, 184, 0.55);
  box-shadow: 0 22px 60px rgba(0, 0, 0, 0.8);
  padding: 20px 22px;
}

.student-login-page .pin-modal-header h2 {
  margin: 0 0 4px;
  font-size: 1.3rem;
}

.student-login-page .pin-form {
  margin-top: 10px;
}

.student-login-page .pin-actions {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  margin-top: 14px;
