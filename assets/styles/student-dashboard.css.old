}

/* ==========================================================
   [16] INSTRUCTOR EDITOR PANEL â€” SLIDE-IN (RIGHT SIDE)
   ========================================================== */

/* Backdrop that dims the page when the editor is open */
.instructor-editor-backdrop {
  position: fixed;
  inset: 0;
  background: rgba(15, 23, 42, 0.65);
  backdrop-filter: blur(8px);
  display: flex;
  justify-content: flex-end;
  align-items: stretch;

  opacity: 0;
  pointer-events: none;
  transition: opacity 0.2s ease;
  z-index: 2000;
}

.instructor-editor-backdrop.is-open {
  opacity: 1;
  pointer-events: auto;
}

/* Slide-in panel itself */
.instructor-editor-panel {
  width: min(420px, 100%);
  max-width: 100%;
