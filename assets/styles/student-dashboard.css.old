  font-size: 1.15rem;
}

.editor-close-btn {
  border: none;
  background: transparent;
  color: #e5e7eb;
  font-size: 1.8rem;
  line-height: 1;
  cursor: pointer;
  padding: 0 4px;
}

/* Editor body (scrollable area for form content) */
.instructor-editor-body {
  padding: 16px 18px 20px;
  overflow-y: auto;
  max-height: calc(100vh - 56px);
}

/* Generic editor form styling (reuses .form-row / .form-input / .form-label from main.css) */
.editor-form .form-row {
  margin-bottom: 12px;
}

/* Editor action row (buttons at bottom) */
.editor-actions {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  margin-top: 16px;
}

/* When editor is open, optionally lock background scroll */
.dashboard-root.editor-open {
  overflow: hidden;
}

/* ==========================================================
   [17] INSTRUCTOR MODE VISIBILITY â€” EDIT CHIPS + BANNER
   ========================================================== */

/* Instructor-only regions default to hidden */
.instructor-only {
  display: none;
  margin-bottom: 8px;
}

/* When instructor mode is active, show instructor-only sections */
.dashboard-root.instructor-mode-active .instructor-only {
  display: flex;
  justify-content: flex-end;
}

/* Small pill button used in instructor-only regions */
.instructor-edit-btn {
  border-radius: 999px;
  padding: 4px 10px;
  font-size: 0.7rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;

  border: 1px dashed rgba(148, 163, 184, 0.7);
  background: rgba(15, 23, 42, 0.85);
  color: #e5e7eb;

  cursor: pointer;
  transition:
    background 0.15s ease,
    border-color 0.15s ease,
    transform 0.08s ease;
}

.instructor-edit-btn:hover {
  background: rgba(56, 189, 248, 0.15);
  border-color: rgba(56, 189, 248, 0.9);
  transform: translateY(-1px);
}

/* Floating banner in top-right when Instructor Mode is ON */
.instructor-banner {
  position: fixed;
  top: 14px;
  right: 18px;
  z-index: 1500;

  padding: 6px 12px;
  border-radius: 999px;

  background: rgba(56, 189, 248, 0.16);
  border: 1px solid rgba(56, 189, 248, 0.7);
  color: #e5e7eb;
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;

  box-shadow: 0 10px 24px rgba(15, 23, 42, 0.75);

  opacity: 0;
  transform: translateY(-10px);
  pointer-events: none;
  transition:
    opacity 0.18s ease,
    transform 0.18s ease;
}

.instructor-banner.is-active {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

