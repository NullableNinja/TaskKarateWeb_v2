/* ==========================================================
   [10] TRAINING TAB
   ========================================================== */

.dashboard-root .training-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 12px;
}

.dashboard-root .training-card {
  background: rgba(15, 23, 42, 0.9);
  border-radius: var(--radius);
  border: 1px solid rgba(148, 163, 184, 0.3);
